        /* Dashboard Stats - Shift Breakdown */
        .shift-stats-row { display: flex; gap: 5px; margin-bottom: 15px; }
        .shift-box { flex: 1; background: #333; color: white; padding: 8px; border-radius: 4px; text-align: center; border: 1px solid #555; }
        .shift-val { display: block; font-size: 1rem; font-weight: bold; color: var(--gold); }
